#! /usr/bin/env bash

panic()
{
	echo "$@"
	exit 1
}

program_dir=$(dirname "$0") || exit 1

usage()
{
	echo "bad usage: $@"
	cat <<- EOF
	Options
	=======

	-s \$start
	-e \$end
	-d \$step
	-i \$image_file
	-p \$imginfo_program
	EOF
	exit 2
}

start=0
step=64
end=4294967296
debug_level=0

imginfo_program="$program_dir/../../tmp_cmake/build/src/app/imginfo"
image_file=

while getopts s:e:d:p:i:D: opt; do
	case "$opt" in
	D)
		debug_level="$OPTARG";;
	s)
		start="$OPTARG";;
	e)
		end="$OPTARG";;
	d)
		step="$OPTARG";;
	i)
		image_file="$OPTARG";;
	p)
		imginfo_program="$OPTARG";;
	esac
done
shift $((OPTIND - 1))

if [ -z "$image_file" ]; then
	usage "no image file specified"
fi

i="$start"
while [ $i -lt "$end" ]; do
	echo "max mem $i"
	command=(env ASAN_OPTIONS="exitcode=10" "$imginfo_program" --debug-level "$debug_level" --memory-limit "$i")
	echo "RUN ${command[@]} < $image_file"
	${command[@]} < "$image_file" > /dev/null
	status=$?
	if [ "$status" -eq 0 ]; then
		echo "OK"
		exit 0
	elif [ "$status" -eq 1 ]; then
		echo "ERROR"
	else
		panic "exit status $status"
	fi
	i=$((i + step))
done
